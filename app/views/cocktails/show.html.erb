<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @cocktail.name %></h1>
    <span><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %> | <%= link_to "Edit", edit_cocktail_path(@cocktail) %></span>
  </div>
  <p><%= @cocktail.description %> </p>
  <ul class="list-group col-6">
    <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item text-secondary d-flex justify-content-between"><span><%= dose.description %> <%= dose.ingredient.name %></span><span><%= link_to "x", dose_path(dose), method: :delete, class: "btn btn-danger" %></span></li>
    <% end %>
  </ul>
  <hr>
  <div class="col-6">
    <p> Add an ingredient: </p>
    <p>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <p><%= f.input :description %></p>
      <p><%= f.association :ingredient, collection: @ingredients.order(:name) %></p>
      <%= f.submit %>
      <% end %>
    </p>
  </div>

  <p><%= link_to "Go back", root_path %></p>
</div>
